<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.fr.intelligence</groupId>
    <artifactId>com.fr.swift</artifactId>
    <packaging>pom</packaging>
    <version>10.0-RELEASE-SNAPSHOT</version>
    <modules>
        <module>swift-base</module>
        <module>swift-analyse</module>
        <module>swift-history</module>
        <module>swift-indexing</module>
        <module>swift-realtime</module>
        <module>swift-server</module>
        <module>swift-log-adaptor</module>
        <module>swift-test</module>
        <module>swift-boot</module>
        <module>swift-cluster</module>
        <module>swift-communication</module>
        <module>swift-netty</module>
        <module>swift-repository</module>
        <module>swift-decision</module>
        <module>swift-redis</module>
        <module>swift-config</module>
    </modules>

    <properties>
        <fr.version>10.0-RELEASE-SNAPSHOT</fr.version>
        <junit.version>4.12</junit.version>
        <easymock.version>3.4</easymock.version>
        <datamining.version>1.1.25</datamining.version>
        <weka.version>3.8.2</weka.version>
        <fineio.version>2.0-RELEASE-SNAPSHOT</fineio.version>
        <rengine.version>1.8.1</rengine.version>
        <output>target</output>
    </properties>

    <build>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.easymock</groupId>
            <artifactId>easymock</artifactId>
            <version>${easymock.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.fr.datasource</groupId>
            <artifactId>fine-datasource</artifactId>
            <version>${fr.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fr.schedule</groupId>
            <artifactId>fine-schedule</artifactId>
            <version>${fr.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fr.decision</groupId>
            <artifactId>fine-decision</artifactId>
            <version>${fr.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fr.activator</groupId>
            <artifactId>fine-activator</artifactId>
            <version>${fr.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fr.report</groupId>
            <artifactId>fine-report-engine</artifactId>
            <version>${fr.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fineio</groupId>
            <artifactId>fineio</artifactId>
            <version>${fineio.version}</version>
        </dependency>
    </dependencies>
</project>