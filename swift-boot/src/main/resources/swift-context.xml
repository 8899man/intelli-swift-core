<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!--基本和环境配置-->
    <context:property-placeholder location="classpath:swift.properties"/>

    <context:annotation-config/>
    <context:component-scan base-package="com.fr.swift.netty.rpc.service"/>
    <context:component-scan base-package="com.fr.swift.service.listener"/>
    <context:component-scan base-package="com.fr.swift.service"/>
    <context:component-scan base-package="com.fr.swift.cluster.service"/>
    <context:component-scan base-package="com.fr.swift.config"/>
    <!--<context:component-scan base-package="com.fr.swift.api"/>-->
    <context:component-scan base-package="com.fr.swift.rm"/>
    <context:component-scan base-package="com.fr.swift.nm"/>

    <import resource="swift-beans.xml"/>
    <import resource="swift-services.xml"/>
</beans>