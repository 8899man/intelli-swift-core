<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.fr.swift.rpc.service"/>
    <context:component-scan base-package="com.fr.swift.service.listener"/>
    <context:component-scan base-package="com.fr.swift.service"/>


    <context:property-placeholder location="classpath:rpc.properties"/>

    <!--<bean id="serviceDiscovery" class="com.fr.swift.rpc.registry.SimpleServiceDiscovery">-->
    <!--<constructor-arg name="address" value="${rpc.client_address}"/>-->
    <!--</bean>-->

    <bean id="swiftProperty" class="com.fr.swift.property.SwiftProperty">
        <property name="rpcAddress" value="${rpc.server_address}"/>
    </bean>

    <bean id="serviceRegistry" class="com.fr.swift.rpc.registry.SimpleServiceRegistry">
    </bean>

    <bean id="rpcServer" class="com.fr.swift.rpc.server.RpcServer">
        <constructor-arg name="serviceAddress" value="${rpc.server_address}"/>
        <constructor-arg name="serviceRegistry" ref="serviceRegistry"/>
        <constructor-arg name="serviceType" value="SERVER_SERVICE"/>
    </bean>

    <!--<bean id="rpcClient" class="com.fr.swift.rpc.server.RpcServer">-->
    <!--<constructor-arg name="serviceAddress" value="${rpc.client_address}"/>-->
    <!--<constructor-arg name="serviceRegistry" ref="serviceRegistry"/>-->
    <!--<constructor-arg name="serviceType" value="1"/>-->
    <!--</bean>-->

</beans>