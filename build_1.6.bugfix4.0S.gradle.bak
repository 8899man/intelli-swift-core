task copyjar(dependsOn:'obfuse')<<{
	ant{
		delete(file:"${baseDir}/JAR/CN/${jarname}")
		mkdir(dir:"${baseDir}/JAR/tmp/1.6")

		//构建jdk1.6的jar包
		jar(destfile:"${baseDir}/JAR/CN/${jarname}"){
			zipfileset(includes:'**/*.*',excludes:'com/fr/bi/test/**',src:"tmp/1.6/${jarname}")
			fileset(dir:"${baseDir}/JAR/CN")
		}
		delete(file:"${baseDir}/bi_jar/*.*")
		copy(todir:"${baseDir}/bi_jar"){
			fileset(file:"${baseDir}/JAR/CN/${jarname}")
			fileset(dir:"${baseDir}/../../lib/${branchName}/report",includes:"fr-*.jar")
		}
		zip(destfile:"${baseDir}/bi_jar_zip/BI4.0jar_jdk1.6.zip"){
			zipfileset(dir:"${baseDir}/bi_jar")
		}
		delete(file:"${baseDir}/JAR/CN/${jarname}")
		delete(dir:"${baseDir}/JAR/tmp")
	}	
}

