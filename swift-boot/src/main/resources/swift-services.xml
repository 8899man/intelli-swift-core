<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       classpath:/com/fr/third/springframework/beans/factory/xml/spring-beans-4.0.xsd">

    <!--配置需要启动的远程服务-->
    <bean id="historyService" class="com.fr.swift.service.SwiftHistoryService"/>
    <bean id="indexingService" class="com.fr.swift.service.SwiftIndexingService"/>
    <bean id="analyseService" class="com.fr.swift.service.SwiftAnalyseService"/>
    <bean id="realtimeService" class="com.fr.swift.service.SwiftRealtimeService"/>
    <bean id="clusterSwiftRegister" class="com.fr.swift.service.register.ClusterSwiftRegister">
        <property name="swiftServiceList">
            <list>
                <ref bean="historyService"/>
                <ref bean="indexingService"/>
                <ref bean="analyseService"/>
                <ref bean="realtimeService"/>
            </list>
        </property>
    </bean>

</beans>